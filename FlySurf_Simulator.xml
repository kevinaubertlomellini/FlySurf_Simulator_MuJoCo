<mujoco model="Skydio X2">
  <compiler autolimits="true" assetdir="assets"/>
  <option timestep="0.0025"/>  <!-- Updated timestep -->
  <option gravity="0 0 -9.81"/>
  <default>
    <default class="ball">
        <geom size="0.005" mass="0.0025"/>
    </default>
    <default class="x2">
      <geom mass="0"/>
      <motor ctrlrange="0 13"/>
      <default class="visual">
        <geom group="2" type="mesh" contype="0" conaffinity="0"/>
      </default>
      <default class="collision">
        <geom group="3" type="box"/>
      </default>
      <site group="5"/>
    </default>
  </default>

  <asset>
    <texture type="2d" file="X2_lowpoly_texture_SpinningProps_1024.png"/>
    <material name="phong3SG" texture="X2_lowpoly_texture_SpinningProps_1024"/>
    <material name="invisible" rgba="0 0 0 0"/>
    <mesh class="x2" file="X2_lowpoly.obj" scale="0.0015 0.0015 0.0015"/>
  </asset>
  
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>
  

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>


    <body name="quad_1" pos="-0.5000 -0.5000 0.05" childclass="x2">
        <joint type="free" damping="0.6"/>
        <geom material="phong3SG" mesh="X2_lowpoly" class="visual" quat="0 0 1 1"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .003"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .009"/>
        <geom class="collision" size=".0075 .00405 .003" pos="-.0105 0 .00975"/>
        <geom class="collision" size=".00345 .00255 .0015" pos="-.02055 .0012 .00975" quat="1 0 0 1"/>
        <geom name="point_mass_1" type="sphere" size="0.012" pos="0 0 0" mass="0.05" material="invisible"/>
        <site name="ball_1_1" pos="0 0 0"/>
    </body>
    

    <body name="quad_2" pos="0.5000 -0.5000 0.05" childclass="x2">
        <joint type="free" damping="0.6"/>
        <geom material="phong3SG" mesh="X2_lowpoly" class="visual" quat="0 0 1 1"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .003"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .009"/>
        <geom class="collision" size=".0075 .00405 .003" pos="-.0105 0 .00975"/>
        <geom class="collision" size=".00345 .00255 .0015" pos="-.02055 .0012 .00975" quat="1 0 0 1"/>
        <geom name="point_mass_2" type="sphere" size="0.012" pos="0 0 0" mass="0.05" material="invisible"/>
        <site name="ball_1_2" pos="0 0 0"/>
    </body>
    

    <body name="quad_3" pos="-0.5000 0.5000 0.05" childclass="x2">
        <joint type="free" damping="0.6"/>
        <geom material="phong3SG" mesh="X2_lowpoly" class="visual" quat="0 0 1 1"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .003"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .009"/>
        <geom class="collision" size=".0075 .00405 .003" pos="-.0105 0 .00975"/>
        <geom class="collision" size=".00345 .00255 .0015" pos="-.02055 .0012 .00975" quat="1 0 0 1"/>
        <geom name="point_mass_3" type="sphere" size="0.012" pos="0 0 0" mass="0.05" material="invisible"/>
        <site name="ball_2_1" pos="0 0 0"/>
    </body>
    

    <body name="quad_4" pos="0.5000 0.5000 0.05" childclass="x2">
        <joint type="free" damping="0.6"/>
        <geom material="phong3SG" mesh="X2_lowpoly" class="visual" quat="0 0 1 1"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .003"/>
        <geom class="collision" size=".009 .00405 .003" pos=".006 0 .009"/>
        <geom class="collision" size=".0075 .00405 .003" pos="-.0105 0 .00975"/>
        <geom class="collision" size=".00345 .00255 .0015" pos="-.02055 .0012 .00975" quat="1 0 0 1"/>
        <geom name="point_mass_4" type="sphere" size="0.012" pos="0 0 0" mass="0.05" material="invisible"/>
        <site name="ball_2_2" pos="0 0 0"/>
    </body>
    
</worldbody>
<actuator>

    <motor class="x2" name="thrust1_x" site="ball_1_1" gear="1 0 0 0 0 0" ctrlrange="-10.1 10.1 "/>
    <motor class="x2" name="thrust1_y" site="ball_1_1" gear="0 1 0 0 0 0" ctrlrange="-10.1 10.1"/>
    <motor class="x2" name="thrust1_z" site="ball_1_1" gear="0 0 1 0 0 0" ctrlrange="-1.01 10.1"/>

    <motor class="x2" name="thrust2_x" site="ball_1_2" gear="1 0 0 0 0 0" ctrlrange="-10.1 10.1 "/>
    <motor class="x2" name="thrust2_y" site="ball_1_2" gear="0 1 0 0 0 0" ctrlrange="-10.1 10.1"/>
    <motor class="x2" name="thrust2_z" site="ball_1_2" gear="0 0 1 0 0 0" ctrlrange="-1.01 10.1"/>

    <motor class="x2" name="thrust3_x" site="ball_2_1" gear="1 0 0 0 0 0" ctrlrange="-10.1 10.1 "/>
    <motor class="x2" name="thrust3_y" site="ball_2_1" gear="0 1 0 0 0 0" ctrlrange="-10.1 10.1"/>
    <motor class="x2" name="thrust3_z" site="ball_2_1" gear="0 0 1 0 0 0" ctrlrange="-1.01 10.1"/>

    <motor class="x2" name="thrust4_x" site="ball_2_2" gear="1 0 0 0 0 0" ctrlrange="-10.1 10.1 "/>
    <motor class="x2" name="thrust4_y" site="ball_2_2" gear="0 1 0 0 0 0" ctrlrange="-10.1 10.1"/>
    <motor class="x2" name="thrust4_z" site="ball_2_2" gear="0 0 1 0 0 0" ctrlrange="-1.01 10.1"/>
</actuator>
<tendon>

    <spatial range="0.999990 1.000000" limited="true"  width=".003" stiffness="0.0250">
	<site site="ball_1_1"/>
	<site site="ball_1_2"/>
    </spatial>

    <spatial range="0.999990 1.000000" limited="true"  width=".003" stiffness="0.0250">
	<site site="ball_2_1"/>
	<site site="ball_2_2"/>
    </spatial>

    <spatial range="0.999990 1.000000" limited="true"  width=".003" stiffness="0.0250">
    <site site="ball_1_1"/>
    <site site="ball_2_1"/>
    </spatial>

    <spatial range="0.999990 1.000000" limited="true"  width=".003" stiffness="0.0250">
    <site site="ball_1_2"/>
    <site site="ball_2_2"/>
    </spatial>

        <spatial range="1.414204 1.414214" limited="true"  width=".003" stiffness="0.0050">
        <site site="ball_1_1"/>
        <site site="ball_2_2"/>
        </spatial>

        <spatial range="1.414204 1.414214" limited="true"  width=".003" stiffness="0.0050">
        <site site="ball_2_1"/>
        <site site="ball_1_2"/>
        </spatial>
</tendon>
</mujoco>